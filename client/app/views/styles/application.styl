// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'

#current-mood
#current-coffeecup
    font-family: title
    font-size: 20px
    margin-left: 2px

.explaination
    font-family: main
    font-size: 20px

.graph-container
    margin-top: 10px
    min-height: 300px
    position: relative

.chart
    position: relative
    left: 40px

.y-axis
    position: absolute
    top: 0
    bottom: 0
    width: 40px

h1
    a
    a:hover
    a:visited
    a:active
    a:focus
        color: black
        outline: 0

button
    margin-bottom: 5px


input
textarea
    border: black
    border-radius: 5px
    background: yellow-grey + 50%
    width: 500px
    padding: 3px

input:hover
textarea:hover
    border-color: red

input:focus
textarea:focus
    border-color: red - 20%


.tools
     padding: 30px
     border-top: 1px solid #AAA 

     .line
         margin-bottom: 0px
