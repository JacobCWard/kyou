// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_states'
@import '_responsive'


#content
    padding: 0 30px

@font-face
    font-family: title
    src: url('../fonts/cabin.otf')

@font-face
    font-family: main
    src: url('../fonts/cabin.otf')

// Menu
#menu
    position fixed
    width 100%
    height 50px
    padding 10px 10px 0 10px
    background-color #39424E
    color white
    z-index 100

    h1
        margin-bottom: 0

    .left 
        span
            margin 0 15px

        input
            width 250px
            background transparent
            border 0p solid transparent
            outline none
            box-shadow none
            color blue

#content
    padding-top: 80px

.header-button
    font-weight: bold
    color white

    &:hover
        color: red
        cursor: pointer

.reload
    padding-left: 20px

// Date selector
#datepicker
    font-family: title
    font-size: 24px
    margin-left: 20px
    background: transparent
    border: 0
    cursor: pointer
    color white

#datepicker:hover
    color: red

// Note widget
#dailynote
    margin: 0
    border: 0
    font-style: italic
    font-family: main
    background: transparent
    border: 1px solid transparent
    border-radius: 0
    outline: 0

#dailynote:focus
    border: 1px solid red

#dailynote:focus
    border: 1px solid red - 20%
    background: white
    box-shadow: 0

// Zoom widget
#zoomtracker
    padding-left: 20px
    width: 96%

// Tracker widget
#current-mood
#current-coffeecup
.current-amount
    font-family: title
    font-size: 20px
    margin-left: 2px

.current-amount
    margin-bottom: 10px

.zoom-editable
    margin-top: 0
    margin-bottom: 0

.zoomtitle
    font-size: 22px
    font-weight: bold
    font-family: title

.zoomtitle
.zoomexplaination
    margin-top: 4px
    margin-bottom: 0px
    background: transparent
    border-color: transparent

.explaination
.zoomexplaination
    font-family: main
    font-size: 20px
    margin 0

.tracker-increment
    display: inline-block
    width: 60px

#remove-btn
    padding: 0 5px 

// New tracker widget
.tools
     padding: 30px
     border-top: 1px solid #AAA 

     .line
         margin-bottom: 0px

// Graph widget
.graph-container
    margin-top: 10px
    min-height: 300px
    position: relative
    width: 98%

.chart
    position: relative
    left: 40px

.y-axis
    position: absolute
    top: 0
    bottom: 0
    width: 40px

// Tracker Amount List

.tracker-amount
    font-family: main

    .amount-date
        width: 100px

    .amount-amount
        width: 50px

    .amount-delete
        button
            padding: 4px

.tracker-amount.deleted
    text-decoration: line-through

    .amount-delete
        button
            display: none

// Quick fix to display x axis labels of Risckshaw graphes below the x axis
.rickshaw_graph .x_tick .title
    bottom: -14px;
    left: -18px

// Quickfix to display timeline properly
#timeline
    margin-left: 38px
    margin-top: 20px

#moods-tracker
    border-bottom 1px solid #EEE


.trackers
    padding 20px

.tracker.line
    border-bottom 1px solid #EEE
    padding 0 0 40px 0

